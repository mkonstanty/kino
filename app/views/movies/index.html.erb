<div class="data_tables">
<table>
  <tr>
    <th>Tytuł</th>
    <th>Gatunek</th>
    <th>Długość</th>
    
  </tr>

<% for movie in @movies %>
  <tr>
    <td><%= link_to movie.name, movie %></td>
    <td><%=h movie.description %></td>
    <td><%=h movie.length %> min.</td>
    <td><%= link_to 'Usun', movie, :confirm => 'Czy jestes pewien?', :method => :delete %></td>

  </tr>
<% end %>
</table>
<%= link_to "Nowy film", new_movie_path %>
</div>
